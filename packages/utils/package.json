{
  "name": "@thmonitor/utils",
  "version": "1.0.0",
  "description": "Utilities for all thmonitor JavaScript SDKs",
  "main": "index.js",
  "author": "diogoxiang@qq.com",
  "license": "MIT",

  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json -w --preserveWatchOutput",
    "clean": "rimraf dist coverage *.js *.js.map *.d.ts",
    "test": "jest",
    "test:watch": "jest --watch --notify"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {

  },
  "devDependencies": {
    "chai": "^4.1.2",
    "jest": "^22.4.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.14.0",
    "prettier-check": "^2.0.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    }
  }
}